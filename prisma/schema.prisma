// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String? 
  password String
}

model ViolenceCase {
  id Int @id @default(autoincrement())  
  description String
  location String
  date DateTime
  isOrganizedCrime Boolean
  hasOrderOfProtection Boolean  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  violenceTypeId Int
  violenceType ViolenceType @relation(fields: [violenceTypeId], references: [id])
  crimeTypeId Int
  crimeType CrimeType @relation(fields: [crimeTypeId], references: [id])
  countyId Int  
  victimViolenceCase VictimViolenceCase[]
}
model Victim {
  id Int @id @default(autoincrement())
  name String
  age Int
  sex String
  activity String
  livingPlace String
  createdAt DateTime @default(now())  
  victimViolenceCase VictimViolenceCase[]  
  rangeAgeId Int  
}
model VictimViolenceCase {
  id Int @id @default(autoincrement())
  victimId Int
  victim Victim @relation(fields: [victimId], references: [id])
  violenceCaseId Int
  scholarchip String
  civilStatus String
  violenceCase ViolenceCase @relation(fields: [violenceCaseId], references: [id])
  createdAt DateTime @default(now())  
}

model Agressor {
  id Int @id @default(autoincrement())  
  scholarship String
  sex String
  civilStatus String
  age Int
  relativeLink String
  isKnown Boolean
  isDrugAddict Boolean
  activity String
  dateCase DateTime  
  createdAt DateTime @default(now())
  municipalityId Int
  municipality Municipality @relation(fields: [municipalityId], references: [id])  
}


model ViolenceType {
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())  
  violenceCase ViolenceCase[]
}

model CrimeType {
  id Int @id @default(autoincrement())
  name String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  crime ViolenceCase[]
}

model Municipality {
  id Int @id @default(autoincrement())
  name String  @unique
  createdAt DateTime @default(now())   
  Agressor Agressor[]
}
